<meta name="viewport" content="width=device-width, initial-scale=1.0">


<dialog class="popup" popover id="animated-popup-bg">
    <div class="popup-layout" id="popup-entails">
        <strong class="popup-status" id="bijna-live-animated">Bijna live!</strong>

        <picture class="show-logo">
            <source srcset="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}?format=avif"
                type="image/avif">
            <source srcset="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}?format=webp"
                type="image/webp">
            <img src="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}"
                alt="Foto van {{ upcomingShow.name  }}" class="deejay-image"
                width="{{ upcomingShow.headermobile.width }}" height="{{upcomingShow.headermobile.height }}">
        </picture>


        <div class="popup-content">
            <h3 class="popup-title">{{upcomingShow.name}}</h3>
            <dl>
                <dt>
                    <svg width="16px" height="16px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4ZM2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12ZM11.8284 6.75736C12.3807 6.75736 12.8284 7.20507 12.8284 7.75736V12.7245L16.3553 14.0653C16.8716 14.2615 17.131 14.8391 16.9347 15.3553C16.7385 15.8716 16.1609 16.131 15.6447 15.9347L11.4731 14.349C11.085 14.2014 10.8284 13.8294 10.8284 13.4142V7.75736C10.8284 7.20507 11.2761 6.75736 11.8284 6.75736Z"
                            fill="#8B8B8B" />
                    </svg>
                </dt>
                <dd><time datetime="{{upcomingShow.from}}">{{upcomingShow.from}}</time> - <time
                        datetime="{{upcomingShow.until}}">{{upcomingShow.until}}</time></dd>

                <dt>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                        aria-hidden="true" focusable="false">
                        <circle cx="12" cy="8" r="4" fill="#FFFFFF" />
                        <path d="M4 20c0-4 4-6 8-6s8 2 8 6" stroke="#FFFFFF" stroke-width="2" fill="none"
                            stroke-linecap="round" />
                    </svg>
                </dt>
                <dd>{{upcomingShow.users[0].mh_users_id.full_name}}</dd>

            </dl>
        </div>

    </div>

    <div class="popup-buttons">
        <button class="popup-button" id="bekijk-meer-popup" >bekijk meer</button>
        <button class="popup-button" id="close-popup" popovertarget="my-popover">Sluit</button>
    </div>

    {% comment %} Placeholders voor visuele animatie  {% endcomment %}
    <p id="body-text-animated">{{ upcomingShow.show. | default: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.'}}</p>
    <button id="close-info-popup">cross</button>

</dialog>

<button id="open-popup" popovertarget="my-popover" aria-label="Bekijk show">
    <picture class="show-popup" id="animated-dj">
        <source srcset="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}?format=avif"
            type="image/avif">
        <source srcset="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}?format=webp"
            type="image/webp">
        <img src="https://fdnd-agency.directus.app/assets/{{upcomingShow.headermobile.id}}"
            alt="Foto van {{ upcomingShow.name  }}" class="show-logo" width="{{ upcomingShow.headermobile.width }}"
            height="{{ upcomingShow.headermobile.height }}">
    </picture>
</button>